{
    "transient":{
        "kind":"data",
        "keys":{
            "photometry":{
                "time":["required", "numeric"],
                "magnitude":["optional", "numeric"],
                "e_magnitude":["optional", "numeric"],
                "e_upper_magnitude":["optional", "numeric"],
                "e_lower_magnitude":["optional", "numeric"],
                "band":"optional",
                "frequency":["optional", "numeric"],
                "u_frequency":"optional",
                "fluxdensity":["optional", "numeric"],
                "u_fluxdensity":"optional",
                "e_fluxdensity":["optional", "numeric"],
                "e_upper_fluxdensity":["optional", "numeric"],
                "e_lower_fluxdensity":["optional", "numeric"],
                "countrate":["optional", "numeric"],
                "e_countrate":["optional", "numeric"],
                "u_countrate":"optional",
                "e_upper_countrate":["optional", "numeric"],
                "e_lower_countrate":["optional", "numeric"],
                "telescope":"optional",
                "instrument":"optional",
                "bandset":"optional",
                "system":"optional",
                "mode":"optional",
                "upperlimit":["optional","boolean"],
                "includeshost":"exclude",
                "host":"exclude",
                "kcorrected":"exclude",
                "scorrected":"exclude",
                "realization":"exclude"
            },
            "ebv":{
                "value":"required"
            },
            "lumdist":{
                "value":"optional"
            },
            "redshift":{
                "value":"optional"
            }
        }
    },
    "default_upper_limit_error":{
        "kind":"parameter",
        "value":0.1,
        "class":"constant"
    },
    "default_no_error_bar_error":{
        "kind":"parameter",
        "value":1.0,
        "class":"constant"
    },
    "lumdist":{
        "kind":"parameter",
        "min_value":1.0e-4,
        "max_value":10.0e4,
        "log":true,
        "class":"parameter",
        "inputs":[
            "transient"
        ],
        "latex":"d_{L}"
    },
    "redshift":{
        "kind":"parameter",
        "class":"redshift",
        "inputs":[
            "transient",
            "lumdist"
        ],
        "latex":"z"
    },
    "variance":{
        "kind":"parameter",
        "value":1.0,
        "class":"variance",
        "latex":"\\sigma"
    },
    "codeltatime":{
        "kind":"parameter",
        "value":-1.0,
        "class":"covariance",
        "latex":"l_t"
    },
    "codeltalambda":{
        "kind":"parameter",
        "value":-1.0,
        "class":"covariance",
        "latex":"l_\\lambda"
    },
    "rvhost":{
        "kind":"parameter",
        "value":3.1,
        "class":"parameter",
        "latex":"R_{\\rm V, host}"
    },
    "constraint":{
        "kind":"constraint"
    },
    "kernel":{
        "kind":"kernel",
        "inputs":[
            "transient",
            "variance",
            "codeltatime",
            "codeltalambda",
            "photometry",
            "default_upper_limit_error",
            "default_no_error_bar_error",
            "constraint"
        ],
        "requests":{
            "average_wavelengths": "photometry",
            "variance_bands": "photometry"
        }
    },
    "likelihood":{
        "kind":"objective",
        "inputs":[
            "kernel"
        ]
    },
    "alltimes":{
        "kind":"array",
        "inputs":[
            "transient"
        ],
        "requests":{
            "photometry": "photometry"
        }
    },
    "resttimes":{
        "kind":"array",
        "inputs":[
            "alltimes",
            "redshift",
            "texplosion"
        ]
    },
    "densetimes":{
        "kind":"array",
        "inputs":[
            "resttimes"
        ]
    },
    "fitlc":{
        "kind":"output",
        "inputs":[
            "transient",
            "photometry",
            "kernel"
        ],
        "class":"lightcurve"
    }
}
